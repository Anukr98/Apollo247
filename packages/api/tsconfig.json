{
  "extends": "./node_modules/@aph/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "importsNotUsedAsValues": "preserve",
    "strictFunctionTypes": false, // disable for buildFederatedSchema call
    "strictPropertyInitialization": false, // https://github.com/typeorm/typeorm/issues/2797
    "lib": ["es5", "es6", "dom"] // Normally we wouldn't add "dom" here, but: https://github.com/Azure/azure-sdk-for-js/issues/4379
  },
  "exclude": ["node_modules", "dist", "data"]
}
