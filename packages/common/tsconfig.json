{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules", "src/cypress"]
}
