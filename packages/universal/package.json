{
  "name": "@aph/universal",
  "version": "0.0.1",
  "main": "",
  "types": "",
  "scripts": {
    "build": "tsc --project .",
    "format": "prettier --list-different src/**/*.js src/**/*.jsx src/**/*.ts src/**/*.tsx src/**/*.json",
    "format:fix": "prettier --write src/**/*.js src/**/*.jsx src/**/*.ts src/**/*.tsx src/**/*.json",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "start": "tsc --project . -w",
    "typecheck": "tsc --project . --noEmit"
  },
  "peerDependencies": {
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@aph/eslint-config": "file:../eslint-config",
    "@aph/prettier-config": "file:../prettier-config",
    "@aph/tsconfig": "file:../tsconfig",
    "@types/validator": "^10.11.1",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.3",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2",
    "validator": "^11.1.0"
  },
  "dependencies": {},
  "author": "sarink",
  "license": "ISC"
}
